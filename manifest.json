{
  "manifest_version": 3,
  "name": "AI Chat Navigator - Multi-Platform Sidebar",
  "version": "2.0.0",
  "description": "为 Gemini、ChatGPT 和 Claude 添加侧边栏，快速定位和导航历史对话消息",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html"],
      "matches": [
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*"
      ]
    }
  ]
}